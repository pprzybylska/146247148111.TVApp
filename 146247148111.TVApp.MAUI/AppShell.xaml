<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_146247148111.TVApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_146247148111.TVApp.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="_146247148111.TVApp.MAUI">

    <FlyoutItem>
        <Tab Title="Television">
            <ShellContent
            Title="TV Catalog"
            ContentTemplate="{DataTemplate local:CatalogTVView}"
            Route="TV Catalog View" />

            <ShellContent
            Title="Add New TV"
            ContentTemplate="{DataTemplate local:AddNewTV}"
            Route="New TV" />
        </Tab>

        <Tab Title="Producer">
            <ShellContent
            Title="Producers Catalog"
            ContentTemplate="{DataTemplate local:ProducersCatalogView}"
            Route="Producers" />

            <ShellContent
            Title="Add New Producer"
            ContentTemplate="{DataTemplate local:AddNewProducer}"
            Route="New Producer" />
        </Tab>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    </FlyoutItem>
    
</Shell>
