@model _146247148111.TVApp.Interfaces.ITV

@{
    ViewData["Title"] = "CreateTV";
}

<h1>CreateTV</h1>

<h4>ITV</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateTV">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ProducerName" class="control-label">Producer Name</label>
                <select name="ProducerName" asp-items="@ViewBag.ProducerNames" class="form-control">
                    <option value="">-- Select Producer --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ScreenSize" class="control-label"></label>
                <input asp-for="ScreenSize" class="form-control" />
                <span asp-validation-for="ScreenSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Screen" class="control-label"></label>
                <select asp-for="Screen" asp-items="Html.GetEnumSelectList<_146247148111.TVApp.Core.ScreenType>()" class="form-control">
                    <option value="">-- Select Screen Type --</option>
                </select>
                <span asp-validation-for="Screen" class="text-danger"></span>
            </div>


            <input type="submit" value="Create" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="TVCatalog">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
